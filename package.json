{
    "name": "stash-stuffs",
    "description": "Stuffs I made for Stash app",
    "author": "Tetrax-10",
    "license": "MIT",
    "type": "module",
    "scripts": {
        "watch": "node Plugins/ReloadClient/ReloadServer.js --All",
        "watch-personal": "node Plugins/ReloadClient/ReloadServer.js --All:personal",
        "watch-theme": "node Plugins/ReloadClient/ReloadServer.js --Themes",
        "watch-personal-theme": "node Plugins/ReloadClient/ReloadServer.js --Themes:personal",
        "build-theme": "sass Themes/PlexBetterStyles/main.scss dist/Themes/PlexBetterStyles/PlexBetterStyles.css --no-source-map --no-error-css --style=compressed",
        "build-theme-local": "sass Themes/PlexBetterStyles/main.scss D:/Apps/Stash/custom.css --no-source-map --no-error-css",
        "build-personal-theme-local": "sass Themes/PlexBetterStyles/main-personal.scss D:/Apps/Stash/custom.css --no-source-map --no-error-css",
        "watch-plugin": "node Plugins/ReloadClient/ReloadServer.js --Plugins",
        "build-plugin-local": "xcopy \"Plugins\" \"D:\\Apps\\Stash\\plugins\\tetrax-repo\" /E /I /Y > nul"
    },
    "devDependencies": {
        "sass": "^1.69.7",
        "ws": "^8.16.0"
    }
}
